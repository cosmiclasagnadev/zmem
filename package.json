{
  "name": "@cosmiclasagnadev/zmem",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "Local-first hybrid memory with zvec + FTS + MCP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmiclasagnadev/zmem.git"
  },
  "bugs": {
    "url": "https://github.com/cosmiclasagnadev/zmem/issues"
  },
  "homepage": "https://github.com/cosmiclasagnadev/zmem#readme",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "memory",
    "mcp",
    "vector-search",
    "fts",
    "sqlite",
    "zvec",
    "rag",
    "local-first"
  ],
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "zmem": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "config.example.json"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "tsx --test test/**/*.test.ts",
    "test:lexical": "tsx --test test/lexical.sanitization.test.ts",
    "smoke": "npm run build && tsx scripts/smoke.ts",
    "smoke:core": "npm run build && tsx scripts/smoke.ts --only=core",
    "smoke:mcp": "npm run build && tsx scripts/smoke.ts --only=mcp",
    "smoke:verbose": "ZMEM_MCP_VERBOSE=true npm run smoke",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@zvec/zvec": "^0.2.0",
    "better-sqlite3": "^11.8.1",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.6.1",
    "fast-glob": "^3.3.3",
    "gpt-tokenizer": "^3.4.0",
    "gray-matter": "^4.0.3",
    "node-llama-cpp": "^3.0.0",
    "p-map": "^7.0.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.30",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
